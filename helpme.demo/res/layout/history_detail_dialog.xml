<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:paddingLeft="5pt"
    android:paddingRight="5pt"
    android:orientation="vertical" 
    android:background="@drawable/maps_help_ee_detail_box_bg">
    
    <TextView
        android:id="@+id/history_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="0"
        android:lines="1"
        android:textSize="8pt" />

    <ImageView
        android:id="@+id/history_seperator1"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginRight="10dp"
        android:layout_weight="0"
        android:scaleType="fitXY"
        android:src="@drawable/seperator_line_horizontal" />
    
     <TextView
        android:id="@+id/history_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="0"
        android:lines="1"
        android:textSize="8pt" />

    <ImageView
        android:id="@+id/history_seperator2"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginRight="10dp"
        android:layout_weight="0"
        android:scaleType="fitXY"
        android:src="@drawable/seperator_line_horizontal" />
    
     <TextView
        android:id="@+id/history_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="0"
        android:lines="1"
        android:textSize="8pt" />

    <ImageView
        android:id="@+id/history_seperator3"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginRight="10dp"
        android:layout_weight="0"
        android:scaleType="fitXY"
        android:src="@drawable/seperator_line_horizontal" />
    
     <TextView
        android:id="@+id/history_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="0"
        android:lines="1"
        android:textSize="8pt" />

    <ImageView
        android:id="@+id/history_seperator4"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginRight="10dp"
        android:layout_weight="0"
        android:scaleType="fitXY"
        android:src="@drawable/seperator_line_horizontal" />
    
     <TextView
        android:id="@+id/history_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="0"
        android:lines="1"
        android:textSize="8pt" />

</LinearLayout>